<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/heartImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/loc_heart1" />

            <ImageView
                android:id="@+id/happyranking1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heartImageView1"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/loc_1st_arrow1" />

            <TextView
                android:id="@+id/location_Text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/happyranking1"
                android:layout_centerHorizontal="true"
                android:text="TextView"
                android:textColor="@color/RED"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </FrameLayout>
</LinearLayout>